{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "useDefineForClassFields": false,
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./",  // ✅ Ensure it compiles all TypeScript files
        "resolveJsonModule": true
    },
    "exclude": ["dist", "node_modules"],
    "include": ["services/**/*.ts", "controllers/**/*.ts", "app.ts", "models/**/*.ts","config/*.ts"] // ✅ Ensure models are included
}
